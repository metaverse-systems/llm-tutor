{
  "name": "@metaverse-systems/llm-tutor-backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
  "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "vitest run",
    "test:e2e": "echo 'No backend-specific e2e tests yet'",
    "test:a11y": "echo 'Accessibility tests run from frontend workspace'",
    "format:css": "node ../../scripts/format-css-workspace.cjs src",
    "tailwind:build": "tailwindcss -c ../../tailwind.config.ts -i ./src/styles/tailwind.css -o ./.tailwind/backend.css --minify",
    "tailwind:watch": "tailwindcss -c ../../tailwind.config.ts -i ./src/styles/tailwind.css -o ./.tailwind/backend.css --watch"
  },
  "dependencies": {
    "@metaverse-systems/llm-tutor-shared": "workspace:*",
    "fastify": "^4.26.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
  "eslint-plugin-import": "^2.29.1",
  "tsx": "^4.17.0",
    "typescript": "~5.5.4",
    "vitest": "^3.2.4"
  }
}
